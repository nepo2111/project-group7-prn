<div class="content">
    <div class="container" style="margin-bottom: 30px;">
        <div class="content-top">
            <h1>New phone model</h1>
            <div class="grid-in">
                @foreach (Product p in ViewBag.Product)
                {
                    <div class="col-md-4 grid-top">
                        <a asp-controller="Product" asp-action="Detail" asp-route-Pid="@(p.ProductId)" class="b-link-stripe b-animate-go  thickbox">
                            <img class="img-responsive" src="@(p.Img)" alt="">
                            <div class="b-wrapper">
                                <h3 class="b-animate b-from-left    b-delay03 ">
                                    <span>@(p.Category.Name)</span>
                                </h3>
                            </div>
                        </a>


                        <p><a href="single.html">@(p.Title)</a></p>
                    </div>
                }

                <div class="clearfix"> </div>
            </div>
        </div>
        <!----->
        @{ Product bestp = ViewBag.BestSell as Product;}
        <div class="content-top-bottom">
            <h2>Best selling products</h2>
            <div class="col-md-5 men">
                <a asp-controller="Product" asp-action="Detail" asp-route-Pid="@(bestp.ProductId)" class="b-link-stripe b-animate-go  thickbox">
                    <img class="img-responsive" src="@(bestp.Img)" alt="">
                    <div class="b-wrapper">
                        <h3 class="b-animate b-from-top top-in   b-delay03 ">
                            <span>@(bestp.Category.Name)</span>
                        </h3>
                    </div>
                </a>
            </div>
            @{ List<Product> ptop = ViewBag.BestSellTop as List<Product>;}
            <div class="col-md-6">
                <div class="col-md2">
                    @for (int i = 1; i < ptop.Count; i++)
                    {
                    <div class="col-md-5 men1">
                        <a asp-controller="Product" asp-action="Detail" asp-route-Pid="@(ptop[i].ProductId)" class="b-link-stripe b-animate-go  thickbox">
                            <img class="img-responsive" src="@(ptop[i].Img)" alt="">
                            <div class="b-wrapper">
                                <h3 class="b-animate b-from-top top-in2   b-delay03 ">
                                    <span>@(ptop[i].Category.Name)</span>
                                </h3>
                            </div>
                        </a>

                    </div>
                    }
                    <div class="clearfix"> </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
