@{
    Layout = "_Layout";
}
@using project_group7_prn.Models;
@model User
<html>

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <!--content-->
    <div class="container">
        <div class="account">
            <h1>Account</h1>
            <div class="account-pass">
                <div class="col-md-8 account-top">
                    <form asp-controller="Home" asp-action="Login">

                        <div>
                            <span>Email</span>
                            <input type="text" name="mail">
                        </div>
                        <div>
                            <span>Password</span>
                            <input type="password" name="password">


                        </div>
                        <div>

                            <a href="#" id="rs-a">Reset Password</a>
                        </div>

                        <input type="submit" value="Login">
                    </form>
                </div>
                <div class="col-md-4 left-account ">
                    <a href="single.html"><img class="img-responsive " src="~/template/images/s1.jpg" alt=""></a>
                    <div class="five">
                        <h2>25% </h2><span>discount</span>
                    </div>
                    <a href="/User/Register" class="create">Create an account</a>
                    <div class="clearfix"> </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>

    </div>

    <!--Modal ResetPassword-->
    <div class="modal fade" id="reset-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Reset Password</h4>
                </div>

                <div class="modal-body">
                    <form class="form-horizontal" role="form" action="" method="post" id="form-change-inf">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="email" id="email-id" placeholder="Enter email address" class="form-control" autofocus>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-danger btn-reset">Reset</a>
                </div>

            </div>
        </div>
    </div>
    <!-- End Modal ResetPassword-->
    <!--End content-->

</body>
<script src="~/Individual/Home/js/ResetPassword.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" type="text/javascript"></script>
</html>