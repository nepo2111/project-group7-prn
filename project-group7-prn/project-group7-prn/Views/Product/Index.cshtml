<!---->
<div class="product">
    <div class="container">
        <div class="col-md-3 product-price">

            <div class=" rsidebar span_1_of_left">
                <div class="of-left">
                    <h3 class="cate">Categories</h3>
                </div>
                <ul class="menu">
                    <li class="item1">
                        <a asp-controller="Product" asp-action="Index" asp-route-Cid="0">All Product</a>
                    </li>
                    @foreach (Category ct in ViewBag.Category)
                    {
                        <li class="item1">
                            <a  asp-controller="Product" asp-action="Index" asp-route-Cid="@(ct.Id)">@(ct.Name)</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="product-middle">

                <div class="fit-top">
                    <h6 class="shop-top">Lorem Ipsum</h6>
                    <a href="single.html" class="shop-now">SHOP NOW</a>
                    <div class="clearfix"> </div>
                </div>
            </div>
            
            <!---->
            <div class="product-bottom">
                <div class="of-left-in">
                    <h3 class="best">Best Sellers</h3>
                </div>
                @{ List<Product> ptop = ViewBag.BestSellTop as List<Product>;}
                @for (int i = 0; i < 2; i++)
                {
                    <div class="product-go">
                        <div class=" fashion-grid">
                            <a href="single.html"><img class="img-responsive " src="@(ptop[i].Img)" alt=""></a>

                        </div>
                        <div class=" fashion-grid1">
                            <h6 class="best2">
                                <a href="single.html">
                                    @(ptop[i].Title)
                                </a>
                            </h6>

                            <span class=" price-in1">
                                @if (ptop[i].SalePrice != null)
                                {
                                    <span><del style="margin-right: 20px">@(ptop[i].Price)</del></span>
                                }
                                else
                                {
                                    <span>@(ptop[i].Price)</span>
                                }
                            </span>
                        </div>

                        <div class="clearfix"> </div>
                    </div>
                }
            </div>
            @*<div class=" per1">
                <a href="single.html">
                    <img class="img-responsive" src="images/pro.jpg" alt="">
                    <div class="six1">
                        <h4>DISCOUNT</h4>
                        <p>Up to</p>
                        <span>60%</span>
                    </div>
                </a>
            </div>*@
        </div>
        <div class="col-md-9 product1">
            <div class=" bottom-product">
                @foreach (Product p in ViewBag.Product)
                {
                <div class="col-md-4 bottom-cd simpleCart_shelfItem">
                    <div class="product-at ">
                        <a asp-controller="Product" asp-action="Detail" asp-route-Pid="@(p.ProductId)">
                            <img class="img-responsive" src="@(p.Img)" alt="">
                            <div class="pro-grid">
                                <span class="buy-in">Buy Now</span>
                            </div>
                        </a>
                    </div>
                    <p class="tun">@(p.Title)</p>
                    <a href="#" class="item_add"><p class="number item_price">
                    <i> </i>
                    @if (p.SalePrice != null)
                    {
                        <del style="margin-right: 20px">@(p.Price)</del>
                        <span>@(p.SalePrice)</span>
                    }
                    else
                    {
                        <span>@(p.Price)</span>
                    }
                    </p></a>
                </div>
                }
            </div>

        </div>
        <div class="clearfix"> </div>
        <nav class="in">
            <ul class="pagination">
                <li><a asp-action="Index" asp-route-Cid="@(ViewBag.Cid)" asp-route-Page="@(ViewBag.pageNumber-1==0?1:ViewBag.pageNumber-1)" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                @for (int a = 1; a <= (ViewBag.Size); a++)
                {
                    <li @(ViewBag.pageNumber == a?"class=\"active\"":"")><a asp-action="Index" asp-route-Cid="@(ViewBag.Cid)" asp-route-Page="@(a)">@(a) <span class="sr-only"></span></a></li>
                }
                <li> <a asp-action="Index" asp-route-Cid="@(ViewBag.Cid)" asp-route-Page="@(ViewBag.pageNumber+1>ViewBag.Size?ViewBag.Size:ViewBag.pageNumber+1)" aria-label="Next"><span aria-hidden="true">»</span> </a> </li>
            </ul>
        </nav>
    </div>

</div>

